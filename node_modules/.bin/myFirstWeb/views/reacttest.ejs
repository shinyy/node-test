<div class="box"></div>
<script type="text/babel" src="js/helloworld_react.js"></script>
<div class="box2"></div>
<script type="text/babel">
	var Myele=React.createClass({
		render:function(){
			return <p>我是 {this.props.name}</p>;
		}
	});
	ReactDOM.render(
		<Myele name="shin"/>,
		document.getElementsByClassName("box2")[0]
		);
</script>
<div class="box3"></div>
<script type="text/babel">
	var WebSite=React.createClass({
		render:function(){
			return(
				<div>
					<Name name={this.props.name} />
					<Site site={this.props.site} />
				</div>
				);
		}
	});

	var Name=React.createClass({
		render:function(){
			return(<h3>{this.props.name}</h3>);
		}
	});

	var Site=React.createClass({
		render:function(){
			return(
				<a href={this.props.site}>{this.props.site}</a>
				);
		}
	});

	ReactDOM.render(
		<WebSite name="淘宝网" site="http://taobao.com" />,
		document.getElementsByClassName("box3")[0]
		);
</script>

<div class="box4"></div>
<script type="text/babel">
	var Btn=React.createClass({
		getInitialState:function(){
			 return {liked: false};
		},
		handleClick:function(event){
			  this.setState({liked: !this.state.liked});
		},
		render:function(){
			// var text=this.state.liked ? "帅":"超级帅";
			var text = this.state.liked ? '喜欢' : '不喜欢';
			return(
				<p onClick={this.handleClick}>
					喜欢看电影吗？<b>{text}</b>！
				</p>
				);
			}
		});

	 React.render(
	 	<Btn />,
	 	document.getElementsByClassName("box4")[0]
	 	);
	
</script>
